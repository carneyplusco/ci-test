{
  "root": {
    "src": "./assets",
    "dest": "./dist"
  },

  "tasks": {
    "browserSync": {
      "proxy": "http://ci2018.dev",
      "notify": false
    },

    "static": {
      "src": "../templates",
      "dest": "./",
      "extensions": ["php"]
    },

    "js": {
      "src": "scripts",
      "dest": "scripts",
      "extractSharedJs": true,
      "entries": {
        "main": [
          "./main.js"
        ]
      },
      "extensions": ["js"]
    },

    "css": {
      "src": "styles",
      "dest": "styles",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": true
      },
      "extensions": ["sass", "scss", "css"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "utility",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "bower": {
      "src": "./bower_components",
      "dest": "bower_components"
    }
  }
}
